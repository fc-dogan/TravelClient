@{
    ViewData["Title"] = "Details";
}

<h1>Review Info:</h1>
<ul>
    <li>ID: @Model.ReviewId</li>
    <li>Country: @Model.Country</li>
    <li>City: @Model.City</li>
    <li>Author: @Model.Author</li>
    <li>Rating: @Model.Rating</li>
    <li>Description: @Model.Description</li>
</ul>
<br>

@Html.ActionLink("Edit Review", "Edit", new { id = Model.ReviewId }, new {@class="btn btn-success"})
@Html.ActionLink("Delete Review", "Delete", new { id = Model.ReviewId }, new {@class="btn btn-danger"})
@Html.ActionLink("Back to Reviews", "Index", new { @class = "btn btn-outline-info"})

